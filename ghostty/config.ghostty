# Theme
theme = Gruvbox Dark 

# Font
font-family = TX-02 
font-size = 18.2

# General settings
confirm-close-surface = false
quit-after-last-window-closed = true

# Window 
window-save-state = always
window-padding-y = 5
window-padding-x = 10

# Cursor 
cursor-style = block
cursor-style-blink = false

# Additional config files 
config-file = "vim.ghostty"
config-file = "shaders.ghostty"
